<% content_for :title, "#{t('work.title')} - #{t('site.name')}" %>

<!-- Hero Section -->
<section class="section-dark pt-32 pb-12">
  <div class="container-custom">
    <%= render 'shared/section_header', 
      title: t('work.title'), 
      subtitle: t('work.subtitle'),
      dark: true %>
  </div>
</section>

<!-- Case Studies Grid -->
<section class="section-dark pb-20">
  <div class="container-custom">
    <% 
      case_studies = [
        { 
          slug: 'polegatch-ride', 
          title: 'Polegatch Ride', 
          category: 'SaaS', 
          description: 'Plataforma de coaching de ciclismo',
          tags: ['Wix', 'Stripe']
        },
        { 
          slug: 'madonna-cafe', 
          title: 'Madonna Cafe', 
          category: 'Landing Page', 
          description: 'Site moderno para cafeteria premium',
          tags: ['Wix', 'Design', 'Performance', 'SEO']
        },
        { 
          slug: 'aasports', 
          title: 'aasports', 
          category: 'E-commerce', 
          description: 'Loja online de pinturas esportivas personalizadas',
          tags: ['E-commerce', 'Shopify', 'Custom']
        },
        { 
          slug: 'watchbikes', 
          title: 'watchbikes', 
          category: 'E-commerce', 
          description: 'E-commerce de bikes e serviços de mecânica',
          tags: ['E-commerce', 'Multi-Service', 'Booking']
        },
        { 
          slug: 'treino-facil', 
          title: 'Treino Fácil', 
          category: 'App', 
          description: 'Aplicativo de treino para ciclistas',
          tags: ['Flutter', 'Fitness', 'Mobile']
        },
        { 
          slug: 'werace', 
          title: 'werace', 
          category: 'SaaS', 
          description: 'Marketplace de compartilhamento de bikes',
          tags: ['Marketplace', 'Booking', 'Payments', 'Ruby on Rails']
        },
        { 
          slug: 'almora-botanica', 
          title: 'Almora Botânica', 
          category: 'E-commerce', 
          description: 'E-commerce de cosméticos naturais',
          tags: ['E-commerce', 'Beauty', 'Branding', 'Shopify']
        },
        { 
          slug: 'associacao-kb', 
          title: 'Associação KB', 
          category: 'Landing Page', 
          description: 'Site institucional para óleos CBD',
          tags: ['Institucional', 'SEO', 'Compliance', 'Shopify']
        }
      ]
    %>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% case_studies.each_with_index do |project, index| %>
        <article class="card-dark group cursor-pointer" data-aos="fade-up" data-aos-delay="<%= (index % 3) * 100 %>">
          <%= link_to case_study_path(project[:slug]), class: "block" do %>
            <!-- Project Image -->
            <div class="aspect-video rounded-xl mb-4 overflow-hidden">
              <%= image_tag "#{project[:slug]}.png", 
                  alt: project[:title], 
                  class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" %>
            </div>
            
            <!-- Content -->
            <div class="space-y-3">
              <div class="flex items-center gap-2">
                <span class="badge"><%= project[:category] %></span>
              </div>
              
              <h3 class="heading-sm text-white group-hover:text-meerkatPink transition-colors">
                <%= project[:title] %>
              </h3>
              
              <p class="text-white/60 text-sm">
                <%= project[:description] %>
              </p>
              
              <div class="flex flex-wrap gap-2 pt-2">
                <% project[:tags].each do |tag| %>
                  <span class="text-xs px-2 py-1 rounded bg-white/5 text-white/50">
                    <%= tag %>
                  </span>
                <% end %>
              </div>
              
              <div class="flex items-center gap-2 text-meerkatPink text-sm font-medium pt-2">
                <%= t('work.view_case') %>
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
          <% end %>
        </article>
      <% end %>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="py-24 lg:py-32 bg-white">
  <div class="container-custom">
    <div class="max-w-3xl mx-auto text-center space-y-8" data-aos="zoom-in">
      <h2 class="heading-lg text-graphite">
        <%= t('cta.title') %>
      </h2>
      <p class="text-xl text-steel">
        <%= t('cta.description') %>
      </p>
      <div class="pt-4">
        <a href="https://www.instagram.com/suricato.web/" target="_blank" rel="noopener noreferrer" class="btn-primary">
          <%= t('cta.button') %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
