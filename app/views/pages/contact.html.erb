<% content_for :title, "#{t('contact.title')} - #{t('site.name')}" %>

<!-- Hero Section -->
<section class="section-dark pt-32 pb-24">
  <div class="container-custom">
    <div class="max-w-4xl mx-auto">
      <%= render 'shared/section_header', 
        title: t('contact.title'), 
        subtitle: t('contact.subtitle'),
        dark: true %>
      
      <!-- Contact Info -->
      <div class="mt-12 space-y-8" data-aos="fade-up">
        <!-- Email -->
        <div class="card-dark text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-meerkatPink/20 flex items-center justify-center">
            <svg class="w-8 h-8 text-meerkatPink" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="heading-sm text-white mb-3"><%= t('contact.email_label') %></h3>
          <a href="mailto:<%= t('site.email') %>" class="text-xl text-meerkatPink hover:text-pink-400 transition-colors">
            <%= t('site.email') %>
          </a>
        </div>
        
        <!-- Social Media -->
        <div class="card-dark text-center">
          <h3 class="heading-sm text-white mb-6"><%= t('contact.social') %></h3>
          <div class="flex justify-center gap-6">
            <!-- Instagram -->
            <a 
              href="https://www.instagram.com/suricato.web/" 
              target="_blank" 
              rel="noopener noreferrer"
              class="group"
            >
              <div class="w-16 h-16 rounded-full bg-meerkatPink/20 hover:bg-meerkatPink flex items-center justify-center transition-all group-hover:scale-110">
                <svg class="w-8 h-8 text-meerkatPink group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </div>
              <p class="text-white/70 text-sm mt-3 group-hover:text-meerkatPink transition-colors">Instagram</p>
            </a>
            
            <!-- LinkedIn -->
            <a 
              href="https://www.linkedin.com/company/suricato-web" 
              target="_blank" 
              rel="noopener noreferrer"
              class="group"
            >
              <div class="w-16 h-16 rounded-full bg-meerkatPink/20 hover:bg-meerkatPink flex items-center justify-center transition-all group-hover:scale-110">
                <svg class="w-8 h-8 text-meerkatPink group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <p class="text-white/70 text-sm mt-3 group-hover:text-meerkatPink transition-colors">LinkedIn</p>
            </a>
          </div>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center pt-6" data-aos="fade-up">
          <a href="https://www.instagram.com/suricato.web/" target="_blank" rel="noopener noreferrer" class="btn-primary justify-center">
            <%= t('hero.cta_primary') %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <%= link_to work_path, class: "btn-ghost justify-center" do %>
            <%= t('hero.cta_secondary') %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
