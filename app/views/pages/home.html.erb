<!-- Hero Section -->
<section class="section-dark min-h-[90vh] flex items-center relative overflow-hidden">
  <!-- Background gradient accent -->
  <div class="absolute inset-0 bg-gradient-to-br from-meerkatPink/10 via-transparent to-transparent"></div>
  
  <div class="container-custom relative z-10">
    <div class="max-w-4xl mx-auto text-center space-y-8" data-aos="fade-up">
      <!-- Main Headline -->
      <h1 class="heading-xl text-white">
        <%= t('hero.title') %>
      </h1>
      
      <!-- Subtitle -->
      <p class="text-xl text-white/80 max-w-2xl mx-auto">
        <%= t('hero.subtitle') %>
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-4">
        <a href="https://www.instagram.com/suricato.web/" target="_blank" rel="noopener noreferrer" class="btn-primary">
          <%= t('hero.cta_primary') %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        <%= link_to work_path, class: "btn-ghost" do %>
          <%= t('hero.cta_secondary') %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<!-- Services Section -->
<section class="py-20 lg:py-24 bg-white">
  <div class="container-custom">
    <div class="mb-16">
      <%= render 'shared/section_header', 
        title: t('services.title'), 
        subtitle: t('services.subtitle'),
        dark: false %>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- E-commerce Card -->
      <div class="card group" data-aos="fade-up" data-aos-delay="0">
        <div class="w-12 h-12 rounded-lg bg-meerkatPink/10 flex items-center justify-center mb-4 group-hover:bg-meerkatPink group-hover:scale-110 transition-all">
          <svg class="w-6 h-6 text-meerkatPink group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <h3 class="heading-sm mb-3"><%= t('services.ecommerce.title') %></h3>
        <p class="text-steel"><%= t('services.ecommerce.description') %></p>
      </div>
      
      <!-- Landing Pages Card -->
      <div class="card group" data-aos="fade-up" data-aos-delay="100">
