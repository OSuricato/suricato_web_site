          <svg class="w-6 h-6 text-meerkatPink group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
          </svg>
        </div>
        <h3 class="heading-sm mb-3"><%= t('services.landing.title') %></h3>
        <p class="text-steel"><%= t('services.landing.description') %></p>
      </div>
      
      <!-- SaaS Card -->
      <div class="card group" data-aos="fade-up" data-aos-delay="200">
        <div class="w-12 h-12 rounded-lg bg-meerkatPink/10 flex items-center justify-center mb-4 group-hover:bg-meerkatPink group-hover:scale-110 transition-all">
          <svg class="w-6 h-6 text-meerkatPink group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
          </svg>
        </div>
        <h3 class="heading-sm mb-3"><%= t('services.saas.title') %></h3>
        <p class="text-steel"><%= t('services.saas.description') %></p>
      </div>
      
      <!-- Apps Card -->
      <div class="card group" data-aos="fade-up" data-aos-delay="300">
        <div class="w-12 h-12 rounded-lg bg-meerkatPink/10 flex items-center justify-center mb-4 group-hover:bg-meerkatPink group-hover:scale-110 transition-all">
          <svg class="w-6 h-6 text-meerkatPink group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="heading-sm mb-3"><%= t('services.apps.title') %></h3>
        <p class="text-steel"><%= t('services.apps.description') %></p>
      </div>
    </div>
  </div>
</section>

<!-- Process Section with Accordion -->
<section class="py-20 lg:py-24 bg-graphite">
  <div class="container-custom">
    <div class="mb-16">
      <%= render 'shared/section_header', 
        title: t('process.title'), 
        subtitle: t('process.subtitle'),
        dark: true %>
    </div>
    
    <div class="max-w-4xl mx-auto mt-12" data-aos="fade-up">
      <div id="accordion-process" data-accordion="collapse">
        <!-- Discovery -->
        <h2 id="accordion-process-heading-1">
          <button type="button" class="flex items-center justify-between w-full p-6 font-medium text-left border border-white/10 rounded-t-xl hover:bg-white/5 transition-colors" data-accordion-target="#accordion-process-body-1" aria-expanded="true" aria-controls="accordion-process-body-1">
            <span class="flex items-center gap-4">
              <span class="flex items-center justify-center w-10 h-10 rounded-full bg-meerkatPink text-white font-display font-bold">1</span>
              <span class="heading-sm text-white"><%= t('process.discovery.title') %></span>
            </span>
            <svg data-accordion-icon class="w-6 h-6 shrink-0 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </button>
        </h2>
        <div id="accordion-process-body-1" class="hidden" aria-labelledby="accordion-process-heading-1">
          <div class="p-6 border border-t-0 border-white/10 bg-white/5">
            <p class="text-white/70 leading-relaxed"><%= t('process.discovery.description') %></p>
          </div>
        </div>
        
        <!-- Design -->
        <h2 id="accordion-process-heading-2">
          <button type="button" class="flex items-center justify-between w-full p-6 font-medium text-left border border-t-0 border-white/10 hover:bg-white/5 transition-colors" data-accordion-target="#accordion-process-body-2" aria-expanded="false" aria-controls="accordion-process-body-2">
            <span class="flex items-center gap-4">
              <span class="flex items-center justify-center w-10 h-10 rounded-full bg-meerkatPink text-white font-display font-bold">2</span>
              <span class="heading-sm text-white"><%= t('process.design.title') %></span>
            </span>
            <svg data-accordion-icon class="w-6 h-6 shrink-0 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </button>
        </h2>
        <div id="accordion-process-body-2" class="hidden" aria-labelledby="accordion-process-heading-2">
          <div class="p-6 border border-t-0 border-white/10 bg-white/5">
            <p class="text-white/70 leading-relaxed"><%= t('process.design.description') %></p>
          </div>
        </div>
        
        <!-- Build -->
        <h2 id="accordion-process-heading-3">
          <button type="button" class="flex items-center justify-between w-full p-6 font-medium text-left border border-t-0 border-white/10 hover:bg-white/5 transition-colors" data-accordion-target="#accordion-process-body-3" aria-expanded="false" aria-controls="accordion-process-body-3">
            <span class="flex items-center gap-4">
              <span class="flex items-center justify-center w-10 h-10 rounded-full bg-meerkatPink text-white font-display font-bold">3</span>
              <span class="heading-sm text-white"><%= t('process.build.title') %></span>
            </span>
            <svg data-accordion-icon class="w-6 h-6 shrink-0 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </button>
        </h2>
        <div id="accordion-process-body-3" class="hidden" aria-labelledby="accordion-process-heading-3">
          <div class="p-6 border border-t-0 border-white/10 bg-white/5">
            <p class="text-white/70 leading-relaxed"><%= t('process.build.description') %></p>
          </div>
        </div>
        
        <!-- Launch -->
        <h2 id="accordion-process-heading-4">
          <button type="button" class="flex items-center justify-between w-full p-6 font-medium text-left border border-t-0 border-white/10 rounded-b-xl hover:bg-white/5 transition-colors" data-accordion-target="#accordion-process-body-4" aria-expanded="false" aria-controls="accordion-process-body-4">
            <span class="flex items-center gap-4">
              <span class="flex items-center justify-center w-10 h-10 rounded-full bg-meerkatPink text-white font-display font-bold">4</span>
              <span class="heading-sm text-white"><%= t('process.launch.title') %></span>
            </span>
            <svg data-accordion-icon class="w-6 h-6 shrink-0 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </button>
        </h2>
        <div id="accordion-process-body-4" class="hidden" aria-labelledby="accordion-process-heading-4">
          <div class="p-6 border border-t-0 border-white/10 rounded-b-xl bg-white/5">
            <p class="text-white/70 leading-relaxed"><%= t('process.launch.description') %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Testimonials Section -->
<section class="py-20 lg:py-24 bg-mist">
  <div class="container-custom">
    <div class="mb-16">
      <%= render 'shared/section_header', 
        title: t('testimonials.title'), 
        subtitle: t('testimonials.subtitle'),
        dark: false %>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% [
        { key: 'polegatch', delay: 0 },
        { key: 'madonna', delay: 100 },
        { key: 'aasports', delay: 200 },
        { key: 'watchbikes', delay: 0 },
        { key: 'treino_facil', delay: 100 },
        { key: 'werace', delay: 200 },
        { key: 'almora', delay: 0 },
        { key: 'kb', delay: 100 }
      ].each do |testimonial| %>
        <div class="card" data-aos="fade-up" data-aos-delay="<%= testimonial[:delay] %>">
          <div class="flex items-start gap-3 mb-4">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-meerkatPink to-pink-600 flex items-center justify-center flex-shrink-0">
              <span class="text-white font-display font-bold text-lg">
                <%= t("testimonials.#{testimonial[:key]}.author").first %>
              </span>
            </div>
            <div>
              <h4 class="font-semibold text-graphite">
                <%= t("testimonials.#{testimonial[:key]}.author") %>
              </h4>
              <p class="text-sm text-steel">
                <%= t("testimonials.#{testimonial[:key]}.role") %>
              </p>
            </div>
          </div>
          <p class="text-graphite/80 italic leading-relaxed">
            "<%= t("testimonials.#{testimonial[:key]}.quote") %>"
          </p>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Final CTA Section -->
<section class="py-24 lg:py-32 bg-graphite relative overflow-hidden">
  <div class="absolute inset-0 animated-gradient opacity-20"></div>
  
  <div class="container-custom relative z-10">
    <div class="max-w-3xl mx-auto text-center space-y-8" data-aos="zoom-in">
      <h2 class="heading-lg text-white">
        <%= t('cta.title') %>
      </h2>
      <p class="text-xl text-white/80">
        <%= t('cta.description') %>
      </p>
      <div class="pt-4">
        <a href="https://www.instagram.com/suricato.web/" target="_blank" rel="noopener noreferrer" class="btn-primary text-lg px-8 py-4">
          <%= t('cta.button') %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
