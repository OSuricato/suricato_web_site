<% content_for :title, "#{@case_study[:title]} - #{t('site.name')}" %>

<!-- Hero Section -->
<section class="section-dark pt-32 pb-16">
  <div class="container-custom">
    <div class="max-w-4xl mx-auto">
      <!-- Back Button -->
      <div class="mb-8" data-aos="fade-right">
        <%= link_to work_path, class: "inline-flex items-center gap-2 text-white/70 hover:text-meerkatPink transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          <%= t('case_study.back_to_work') %>
        <% end %>
      </div>
      
      <!-- Title & Category -->
      <div class="space-y-4" data-aos="fade-up">
        <span class="badge"><%= @case_study[:category] %></span>
        <h1 class="heading-xl text-white"><%= @case_study[:title] %></h1>
        <p class="text-xl text-white/70"><%= @case_study[:description] %></p>
      </div>
    </div>
  </div>
</section>

<!-- Main Hero Image -->
<section class="section-dark pb-20">
  <div class="container-custom">
    <div class="max-w-5xl mx-auto" data-aos="zoom-in">
      <% 
        # Map special cases for hero images (for projects without dedicated hero images)
        hero_filename = case @slug
        when 'watchbikes', 'associacao-kb'
          "#{@slug}.png"    # No separate hero, use main thumbnail image
        else
          "#{@slug}-hero.png"
        end
        
        hero_path = "#{hero_filename}"
      %>
      <%= image_tag hero_path, 
          alt: "#{@case_study[:title]} - Imagem principal", 
          class: "w-full h-auto rounded-2xl shadow-2xl" %>
    </div>
  </div>
</section>

<!-- Overview Section -->
<section class="py-20 lg:py-24 bg-white">
  <div class="container-custom">
    <div class="max-w-4xl mx-auto">
      <div data-aos="fade-up">
        <h2 class="heading-lg text-graphite mb-8"><%= t('case_study.overview') %></h2>
        <p class="text-lg text-steel leading-relaxed">
          <%= @case_study[:overview] %>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Challenge & Solution -->
<section class="py-20 lg:py-24 bg-graphite">
  <div class="container-custom">
    <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Challenge -->
      <div class="card-dark" data-aos="fade-up" data-aos-delay="0">
        <div class="w-12 h-12 rounded-lg bg-meerkatPink/20 flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-meerkatPink" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="heading-md text-white mb-4"><%= t('case_study.challenge') %></h3>
        <p class="text-white/70 leading-relaxed">
          <%= @case_study[:challenge] %>
        </p>
      </div>
      
      <!-- Solution -->
      <div class="card-dark" data-aos="fade-up" data-aos-delay="100">
        <div class="w-12 h-12 rounded-lg bg-meerkatPink/20 flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-meerkatPink" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="heading-md text-white mb-4"><%= t('case_study.solution') %></h3>
        <p class="text-white/70 leading-relaxed">
          <%= @case_study[:solution] %>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Results -->
<section class="py-20 lg:py-24 bg-mist">
  <div class="container-custom">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-16" data-aos="fade-up">
        <h2 class="heading-lg text-graphite"><%= t('case_study.results') %></h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% @case_study[:results].each_with_index do |result, index| %>
          <div class="card text-center" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
            <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-meerkatPink flex items-center justify-center">
              <span class="text-white font-display font-bold text-lg"><%= index + 1 %></span>
            </div>
            <p class="text-graphite font-semibold leading-relaxed">
              <%= result %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Technologies -->
<section class="py-20 lg:py-24 bg-white">
  <div class="container-custom">
    <div class="max-w-4xl mx-auto text-center">
      <div data-aos="fade-up">
        <h2 class="heading-lg text-graphite mb-12"><%= t('case_study.technologies') %></h2>
        <div class="flex flex-wrap justify-center gap-3">
          <% @case_study[:technologies].each do |tech| %>
            <span class="px-4 py-2 rounded-full bg-meerkatPink/10 text-meerkatPink font-medium border border-meerkatPink/20">
              <%= tech %>
            </span>
          <% end %>
        </div>
        
        <% if @case_study[:url].present? %>
          <div class="mt-12">
            <a href="<%= @case_study[:url] %>" target="_blank" rel="noopener noreferrer" class="btn-primary">
              <%= t('case_study.visit_site') %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Additional Screenshots -->
<section class="py-20 lg:py-24 bg-mist">
  <div class="container-custom">
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <% 
          # Map special cases for screenshot filenames
          screenshot_prefix = case @slug
          when 'watchbikes'
            'watch-bikes'  # Special case: hyphenated filename
          when 'associacao-kb'
            nil  # No screenshots available
          else
            @slug
          end
          
          if screenshot_prefix
            4.times do |i| 
              screenshot_num = i + 1
              screenshot_path = "#{screenshot_prefix}-sc-#{screenshot_num}.png"
        %>
              <%= image_tag screenshot_path, 
                  alt: "#{@case_study[:title]} - Screenshot #{screenshot_num}", 
                  class: "w-full h-auto rounded-xl shadow-lg",
                  data: { aos: "fade-up", aos_delay: i * 100 } %>
        <%   end
          else
        %>
            <!-- No screenshots available for this project -->
            <% 4.times do |i| %>
              <div class="aspect-video bg-gradient-to-br from-steel/20 to-steel/10 rounded-xl flex items-center justify-center shadow-lg" data-aos="fade-up" data-aos-delay="<%= i * 100 %>">
                <div class="text-center p-6">
                  <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-steel/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-steel/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <p class="text-steel/40 text-sm">Screenshot <%= i + 1 %></p>
                </div>
              </div>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="py-24 lg:py-32 bg-graphite">
  <div class="container-custom">
    <div class="max-w-3xl mx-auto text-center space-y-6" data-aos="zoom-in">
      <h2 class="heading-lg text-white">
        <%= t('cta.title') %>
      </h2>
      <p class="text-xl text-white/80">
        <%= t('cta.description') %>
      </p>
      <div class="pt-4">
        <a href="https://www.instagram.com/suricato.web/" target="_blank" rel="noopener noreferrer" class="btn-primary">
          <%= t('cta.button') %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
