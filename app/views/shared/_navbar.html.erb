<!-- Navbar with sticky positioning and dark background -->
<nav class="sticky top-0 z-50 bg-graphite/95 backdrop-blur-md border-b border-white/10">
  <div class="container-custom">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <%= link_to root_path, class: "flex items-center gap-3 group" do %>
        <%= image_tag "logo.png", alt: t('site.name'), class: "h-12 w-12 rounded-full transition-transform group-hover:scale-105" %>
        <span class="font-display font-bold text-xl text-white hidden sm:inline">
          <%= t('site.name') %>
        </span>
      <% end %>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#servicos" class="text-white/80 hover:text-white font-medium transition-colors">
          <%= t('nav.services') %>
        </a>
        <%= link_to t('nav.work'), work_path, class: "text-white/80 hover:text-white font-medium transition-colors" %>
        <%= link_to t('nav.about'), about_path, class: "text-white/80 hover:text-white font-medium transition-colors" %>
        <%= link_to t('nav.contact'), contact_path, class: "text-white/80 hover:text-white font-medium transition-colors" %>
        
        <!-- CTA Button -->
        <a href="https://www.instagram.com/suricato.web/" target="_blank" rel="noopener noreferrer" class="btn-primary">
          <%= t('hero.cta_primary') %>
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        data-collapse-toggle="mobile-menu" 
        type="button" 
        class="md:hidden inline-flex items-center p-2 text-white hover:bg-white/10 rounded-lg transition-colors"
        aria-controls="mobile-menu" 
        aria-expanded="false"
      >
        <span class="sr-only">Abrir menu</span>
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div class="hidden md:hidden pb-4" id="mobile-menu">
      <div class="flex flex-col gap-3">
        <a href="#servicos" class="text-white/80 hover:text-white font-medium transition-colors py-2">
          <%= t('nav.services') %>
        </a>
        <%= link_to t('nav.work'), work_path, class: "text-white/80 hover:text-white font-medium transition-colors py-2" %>
        <%= link_to t('nav.about'), about_path, class: "text-white/80 hover:text-white font-medium transition-colors py-2" %>
        <%= link_to t('nav.contact'), contact_path, class: "text-white/80 hover:text-white font-medium transition-colors py-2" %>
        <a href="https://www.instagram.com/suricato.web/" target="_blank" rel="noopener noreferrer" class="btn-primary justify-center mt-2">
          <%= t('hero.cta_primary') %>
        </a>
      </div>
    </div>
  </div>
</nav>
