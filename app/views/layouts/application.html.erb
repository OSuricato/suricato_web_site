<!DOCTYPE html>
<html lang="pt-BR" class="scroll-smooth">
  <head>
    <title><%= content_for(:title) || "#{t('site.name')} - #{t('site.tagline')}" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="<%= content_for(:description) || t('hero.subtitle') %>">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= request.original_url %>">
    <meta property="og:title" content="<%= content_for(:title) || "#{t('site.name')} - #{t('site.tagline')}" %>">
    <meta property="og:description" content="<%= content_for(:description) || t('hero.subtitle') %>">
    <meta property="og:image" content="<%= asset_url('logo.png') %>">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="<%= request.original_url %>">
    <meta property="twitter:title" content="<%= content_for(:title) || "#{t('site.name')} - #{t('site.tagline')}" %>">
    <meta property="twitter:description" content="<%= content_for(:description) || t('hero.subtitle') %>">
    <meta property="twitter:image" content="<%= asset_url('logo.png') %>">
    
    <!-- Theme -->
    <meta name="theme-color" content="#EC407A">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="<%= t('site.name') %>">
    <meta name="mobile-web-app-capable" content="yes">
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%= favicon_link_tag asset_path('logo.png') %>
    <%= favicon_link_tag asset_path('logo.png'), rel: 'apple-touch-icon', type: 'image/png' %>

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="antialiased font-sans">
    <%= render 'shared/navbar' %>
    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
